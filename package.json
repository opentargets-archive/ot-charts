{
  "name": "ot-charts",
  "version": "0.0.35",
  "description": "Open Targets charting library",
  "main": "build/index.js",
  "contributors": [
    "Alfredo Miranda <alfredo@miranda.io>",
    "Gareth Peat <garethpeat@gmail.com>"
  ],
  "license": "Apache-2.0",
  "private": false,
  "dependencies": {
    "lodash.sortby": "^4.7.0"
  },
  "devDependencies": {
    "@team-griffin/install-self-peers": "^1.1.1",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "codecov": "^3.0.4",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^4.1.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.0",
    "prettier": "1.14.0",
    "prop-types": "^15.6.2",
    "react-styleguidist": "^7.1.0"
  },
  "scripts": {
    "build": "babel lib -d build --ignore *.spec.js",
    "build:watch": "babel lib -w -d build",
    "eslint": "eslint . --fix --ext .js",
    "version": "yarn build",
    "postversion": "git push && git push --tags",
    "prettier": "prettier --write",
    "prettier:all": "prettier --write 'lib/**/*.js'",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "peers": "install-self-peers -- --ignore-scripts",
    "report:coverage": "codecov"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "lib/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "**/*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "d3": "^5.5.0",
    "d3-scale-chromatic": "^1.3.3",
    "polished": "^2.1.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-measure": "^2.1.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./lib/setupTests.js",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/index.js",
      "!lib/setupTests.js"
    ]
  }
}
